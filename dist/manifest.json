{
  "name": "__MSG_extName__",
  "short_name": "__MSG_extShortName__",
  "description": "__MSG_extDescription__",
  "version": "1.2",
  "manifest_version": 2,
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_idle",
      "js": [
        "content_scripts.js"
      ],
      "css": [
        "content_scripts.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "19": "images/shooting_star19.png"
    }
  },
  "icons": {
    "16": "images/shooting_star16.png",
    "32": "images/shooting_star32.png",
    "48": "images/shooting_star48.png",
    "128": "images/shooting_star128.png"
  },
  "permissions": [
    "storage",
    "bookmarks",
    "tabs",
    "background",
    "activeTab"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+S",
        "mac": "MacCtrl+S",
        "chromeos": "Ctrl+S",
        "linux": "Ctrl+S"
      }
    }
  }
}
